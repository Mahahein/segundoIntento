CPPFLAGS=-std=c++0x

all: prueba

prueba : main.o Objeto.o Pivote.o Bloque.o Nodo.o Saco.o
	g++ $(CPPFLAGS) main.o Objeto.o Pivote.o Bloque.o Nodo.o Saco.o -o prueba

main.o: main.cpp
	g++ $(CPPFLAGS) -c main.cpp

Objeto.o: Objeto.cpp
	g++ $(CPPFLAGS) -c Objeto.cpp

Pivote.o: Pivote.cpp
	g++ $(CPPFLAGS) -c Pivote.cpp

Bloque.o: Bloque.cpp
	g++ $(CPPFLAGS) -c Bloque.cpp

Nodo.o: Nodo.cpp
	g++ $(CPPFLAGS) -c Nodo.cpp

Saco.o: Saco.cpp
	g++ $(CPPFLAGS) -c Saco.cpp

clean:
	rm -rf *o prueba

